<h1>Proposed Items (Stillwater Manor)</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Cost</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= link_to item.title, item %></td>
    <td>$<%= number_with_precision(item.cost, :precision => 0) %></td>
    <td><%= item.description %></td>
        <td>[<%= link_to 'Edit', edit_item_path(item) %>]</td>
        <td>[<%= link_to 'Delete', item, confirm: 'Are you sure?', method: :delete %>]</td>
  </tr>
<% end %>
</table>

<br />

