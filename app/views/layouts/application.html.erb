<!DOCTYPE html>
<html>
<head>
  <title>Stillwater Manor</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="title">
    <%=  link_to "Stillwater Manor", root_url %>
    <% if current_user %>
        <div class="title_links">
          <%=  current_user.name %>
          [<%= link_to 'Logout', "/logout" %>]
        </div>
    <% end %>
  </div>
<!--  <%= link_to image_tag( "manor.jpg", :class => "title_image" ), root_url %> -->
  <div class="content">
    <%= yield %>
  </div>


</body>
</html>
