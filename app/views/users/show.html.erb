<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Unit:</b>

  <% i = 0 %>
  <% @user.units.each do |unit|  %>
      <% i += 1 %>
      <% if i > 1 %>
          ,
      <% end %>
      <%= unit.number %>
  <% end %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>


